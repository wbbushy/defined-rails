<% if @words == [] %>

  <%=  p "ADD A WORD!" %>
<% else %>
  <% @words.each do |x| %>
    <%= p x.word.spelling %>
    <%= p x.word.definition %>
    <%= link_to "Delete", word_path(x.word.id) , method: "delete"%>
    <br>
  <% end %>
<% end %>

<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

