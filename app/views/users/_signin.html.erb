<% if session[:id] == nil %>
  <%=form_tag sessions_path, :class => "form-horizontal" do %>
    <h3>Please Sign In</h3>

    <div class="form-group">
      <%= text_field_tag :user_name, nil, :placeholder => "username", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= password_field_tag :password, nil, :placeholder => "password", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Log in", :class => "btn btn-primary btn-lg btn-block" %>
    </div>

  <%end%>
  <br>
  <p id="create-account">Create Account</p>

<% end %>

<% if flash[:useralert] %>
  <%= flash[:useralert] %>
<% end %>
