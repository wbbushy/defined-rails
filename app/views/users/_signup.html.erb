<% if session[:id] == nil %>
  <%= form_tag users_path do %>
    <span class="sign_up_label">user name:</span>
    <%= text_field_tag :user_name , nil , :placeholder => "e.g. papajons"%>
    <span class="sign_up_label">password:</span>
    <%= password_field_tag :password , nil , :placeholder => "password"%>
    <span class="sign_up_label">email:</span>
    <%= email_field_tag :email , nil , :placeholder => "e.g. sample@example.com"%>
    <%= submit_tag "Sign up" %>
  <% end %>
<% end %>
